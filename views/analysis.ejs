<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HK Budget</title>
    <link rel="icon" type="image/x-icon" href="/images/hklogo.png">  
    <link rel="stylesheet" href="/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/icons/css/fontawesome-5.css" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body
    style="
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      height: 100vh;
    "
  >
    <div>
      <%- include('includes/nav')%>
      <div class="container">
        <h1 class="my-3" style="color: #553092">Analysis</h1>

        <div class="d-flex flex-wrap justify-content-center">
          <div class="flex-fill">
            <div style="max-width: 500px" class="mx-3 p-3">
              <h5>Details</h5>
              <div class="d-flex flex-wrap justify-content-between">
                <span>Current Amount : </span>
                <span class="w-50 border-bottom px-2"
                  ><%= analysis.amountLeft%></span
                >
              </div>

              <div class="d-flex flex-wrap justify-content-between">
                <span>Amount Spent : </span>
                <span class="w-50 border-bottom px-2"
                  ><%= analysis.expenses%></span
                >
              </div>

              <div class="mt-3">
                <p class="mb-0">
                  Best Days :
                  <span class="bg-success px-2 text-light fs-6"
                    >Amount : <%= analysis.minExpense.amount%></span
                  >
                </p>
                <% analysis.minExpense.days.forEach(function(day){%>
                <p class="border-bottom text-success mt-1">
                  <%= new Date(day).toDateString()%>
                </p>
                <% })%>
              </div>

              <div class="mt-3">
                <p class="mb-0">
                  Worst Days :
                  <span class="bg-danger px-2 text-light fs-6"
                    >Amount : <%= analysis.maxExpense.amount%></span
                  >
                </p>
                <% analysis.maxExpense.days.forEach(function(day){%>
                <p class="border-bottom text-success mt-1">
                  <%= new Date(day).toDateString()%>
                </p>
                <% })%>
              </div>

              <div class="d-flex flex-wrap justify-content-between mt-5">
                <span>Expense Percentage : </span>
                <span class="w-50 border-bottom px-2"
                  ><%= analysis.expensePercentage %>%</span
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('includes/footer.ejs')%>

    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <script src="/js/main.js"></script>
  </body>
</html>
